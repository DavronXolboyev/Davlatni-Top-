<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rarar"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bayroqBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/style"
        android:drawableStart="@drawable/ic_baseline_emoji_flags_24"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Bayroqni top!"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingClass,MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gerbBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button2"
        android:drawableStart="@drawable/ic_baseline_adjust_24"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Gerbni top!"
        android:textColor="#02198C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/bayroqBtn"
        app:layout_constraintStart_toStartOf="@+id/bayroqBtn"
        app:layout_constraintTop_toBottomOf="@+id/bayroqBtn"
        tools:ignore="MissingClass,MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/poytaxtBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button3"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="Poytaxtni top!"
        android:textColor="#158501"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/gerbBtn"
        app:layout_constraintStart_toStartOf="@+id/gerbBtn"
        app:layout_constraintTop_toBottomOf="@+id/gerbBtn"
        tools:ignore="MissingClass,MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:padding="8dp"
        android:text="Created by Davron"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/poytaxtBtn"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/poytaxtBtn"
        app:layout_constraintTop_toBottomOf="@+id/poytaxtBtn"
        app:layout_constraintVertical_bias="0.769"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>